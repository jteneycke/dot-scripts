if defined?(AwesomePrint)
  AwesomePrint.pry!

  module AwesomePrint
    class Inspector
      alias_method :old_printable, :printable
      private
      def printable(object)
        if object.class.to_s.downcase.include?("activerecord_relation")
          return :activerecord_relation
        end
        old_printable(object)
      end
    end
  end
end
